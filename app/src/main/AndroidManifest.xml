<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.port.ocean.shipping"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!--接收开机启动的通知的权限，实现服务开机自启的必要权限-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <!--唤醒权限，避免在锁屏时线程被挂起-->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity
            android:name=".activity.IdentityActivity"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden"/>
        <activity
            android:name=".activity.GoodsSupplyFindResultListActivity"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden"/>
        <activity
            android:name=".activity.GoodsSupplyFindActivity"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden"/>
        <activity
            android:name=".activity.PublishEmptyCarActivity"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden"/>
        <activity
            android:name=".activity.CarFieldActivity"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden"/>
        <activity
            android:name=".activity.TransactionListActivity"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden"/>
        <activity
            android:name=".activity.TransactionContentActivity"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden"/>
        <activity
            android:name=".activity.GoodsSupplyContentActivity"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden"/>

    </application>

</manifest>
