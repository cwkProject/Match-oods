<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="5dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/table_layout_row_margin"
        android:layout_marginTop="@dimen/table_layout_row_margin"
        android:orientation="vertical"
        android:stretchColumns="1">

        <TableRow
            android:layout_height="@dimen/edit_default_height"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="@dimen/image_default_margin_left"
                android:layout_marginRight="@dimen/image_default_margin_right"
                android:background="@android:color/white"
                android:scaleType="center"
                android:src="@mipmap/start_large_icon"/>

            <EditText
                android:id="@+id/fragment_rationing_start_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/edit_default_margin_left"
                android:background="@android:color/white"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:hint="@string/edit_start_hint"
                android:paddingLeft="@dimen/edit_default_padding_left"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_view_default_text_size"/>

        </TableRow>

        <TableRow
            android:layout_height="@dimen/edit_default_height"
            android:layout_marginTop="2dp"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="@dimen/image_default_margin_left"
                android:layout_marginRight="@dimen/image_default_margin_right"
                android:background="@android:color/white"
                android:gravity="center"
                android:scaleType="center"
                android:src="@mipmap/end_large_icon"/>

            <EditText
                android:id="@+id/fragment_rationing_end_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/edit_default_margin_left"
                android:background="@android:color/white"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:hint="@string/edit_end_hint"
                android:paddingLeft="@dimen/edit_default_padding_left"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_view_default_text_size"/>

        </TableRow>

        <Button
            android:id="@+id/fragment_rationing_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_default_height"
            android:layout_marginTop="20dp"
            android:background="@color/orange"
            android:text="@string/fragment_rationing_button"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_default_text_size"
            android:textStyle="bold"/>
    </TableLayout>

</LinearLayout>