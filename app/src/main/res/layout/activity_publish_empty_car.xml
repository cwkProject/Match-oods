<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar_default_title"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/activity_publish_empty_car_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/activity_publish_empty_car_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <fragment
            android:id="@+id/activity_publish_empty_car_navigation_drawer"
            android:name="com.port.ocean.shipping.fragment.SelectListFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            tools:layout="@layout/fragment_select_list"/>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>